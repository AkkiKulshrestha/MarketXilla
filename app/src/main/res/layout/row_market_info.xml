<?xml version="1.0" encoding="utf-8"?>
<FrameLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cw_shadow_market_box">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/detail_widget_list_item"
        android:background="@color/colorAccent">

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left|start|center_vertical"
            >
             <TextView
                 android:id="@+id/stock_symbol"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 android:textAllCaps="true"
                 android:text="BANKNIFTY"
                 android:textSize="16sp"
                 />
            <TextView
                android:id="@+id/tv_row_strike_ce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:textSize="12dp"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                />

         </LinearLayout>



        <LinearLayout
            android:id="@+id/tv_block_changing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right|end"
            >
            <TextView
                android:id="@+id/tv_ltp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_vol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="9dp"

                android:textColor="@color/white"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/change_layout"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tc_change_per"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/change_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"

            android:layout_gravity="bottom"
            android:src="@drawable/down"/>
    </LinearLayout>
</FrameLayout>