<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/cw_button_shadow_primary"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40sp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Verify OTP"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:focusableInTouchMode="false"
            android:src="@drawable/ic_close"
            android:tint="@color/white"
            android:visibility="gone"
            tools:ignore="UseAppTint" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/til_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20sp"
                android:gravity="center"
                android:padding="10sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_Email_Addresss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10sp"
                android:enabled="false"
                android:hint="Email *"
                android:minHeight="45dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edt_Mobile_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10dp"
                android:enabled="false"
                android:hint="Mobile *"
                android:maxLength="10"

                android:minHeight="45dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_get_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:gravity="center"
                android:padding="20sp"
                android:text="GET OTP"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_junk_str"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_verification_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_lock_open"
                    android:drawablePadding="10sp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Please Enter OTP"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="4"
                    android:minHeight="40sp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/abc_secondary_text_material_light"
                    android:textColorHint="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/Resend_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:editable="false"
                    android:gravity="center"
                    android:padding="15sp"
                    android:text="Resend OTP"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/Verify_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:background="@drawable/cw_shadow_black"
                    android:gravity="center"
                    android:padding="15sp"
                    android:text="VERIFY"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>